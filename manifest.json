{
    "manifest_version": 3,
    "name": "AltVision",
    "version": "1.0",
    "description": "A Chrome extension to improve accessibility by adding alt tags to images.",
    "permissions": [
        "scripting",
        "activeTab", 
        "storage"
    ],
    "host_permissions": [
        "<all_urls>",
        "https://*.cognitive.microsoft.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    }
}